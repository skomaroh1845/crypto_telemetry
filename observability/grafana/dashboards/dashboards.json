{
  "id": null,
  "title": "Default Telemetry Dashboard",
  "tags": ["telemetry", "default"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate - number of request to services",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(otel_notifier_requests_total[$__rate_interval])",
          "legendFormat": "Rate {{method}} - {{status_code}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 0,
            "gradientMode": "none",
            "spanNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            }
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(otel_notifier_requests_total{status_code=~\"5..\"}[$__rate_interval])",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 0.1
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Request Duration",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by(le) (rate(otel_notifier_processing_duration_seconds_bucket[$__rate_interval])))",
          "legendFormat": "P99",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum by(le) (rate(otel_notifier_processing_duration_seconds_bucket[$__rate_interval])))",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.50, sum by(le) (rate(otel_notifier_processing_duration_seconds_bucket[$__rate_interval])))",
          "legendFormat": "P50",
          "refId": "C"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "refresh": "30s",
  "schemaVersion": 37,
  "version": 1,
  "uid": "default-telemetry"
}
